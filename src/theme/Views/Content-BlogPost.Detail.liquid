<div class="flex justify-center z-10">
    <div class="py-1 px-5 w-full xl:w-2/5 lg:w-3/5 md:w-4/5">
        <div class="mx-5 lg:mx-10">
            <img class="min-w-full" src="{{ ImagePath | asset_url | resize_url: width:1024 }}" alt="Banner" />
        </div>

        <div
            class=" mt-5 first-letter:text-palette4 lg:first-letter:text-8xl first-letter:text-7xl first-letter:float-left first-letter:p-4">
            {{ Model.Content.MarkdownBodyPart | shape_render }}
        </div>

    </div>
</div>