{% assign ContentItem = Model.ContentItem %}
{% assign Content = ContentItem.Content %}
{% assign User = ContentItem.Author  %}
{% assign ImagePath = Content.BlogPost.Image.Paths.first %}


<div class="flex justify-center">
    <div class="py-1 px-5 w-full xl:w-2/5 lg:w-3/5 md:w-4/5">
        <div class="flex items-center py-5">
            <div class="w-10 h-10 relative mr-3">
                <div class="group w-full h-full rounded-full overflow-hidden shadow-inner text-center bg-purple table cursor-pointer">
                    <span class="hidden group-hover:table-cell text-white font-bold align-middle">KR</span>
                    <!-- <img src="~/imgs/luca.jfif" alt="avatar" class="object-cover object-center w-full h-full visible group-hover:hidden" /> -->
                </div>
            </div>
            <div class="text-purple-700 mr-3">
                {{ ContentItem.Author }}
            </div>
            <div class="text-gray-200 mr-3 ">
                |
            </div>
            <div class="text-gray-400 ">
                {{ ContentItem.PublishedUtc | date: "%b %d, %Y" }}
            </div>
        </div>

        <h2 class="text-gray-700 font-bold text-3xl lg:text-5xl font-serif">{{ Content.TitlePart.Title }}</h2>
        <p class="text-gray-400 text-xl lg:text-2xl font-serif">{{ Content.BlogPost.Subtitle.Text }}</p>

        <div class="m-10">
            <img src="{{ ImagePath | asset_url }}" alt="Banner" />
        </div>

        <div class="first-letter:text-purple-800 lg:first-letter:text-8xl first-letter:text-7xl first-letter:float-left first-letter:p-4">
            {{ Model.Content.MarkdownBodyPart | shape_render }}
        </div>

    </div>

</div>