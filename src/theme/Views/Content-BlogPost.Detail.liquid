{% assign ContentItem = Model.ContentItem %}
{% assign Content = ContentItem.Content %}
{% assign User = ContentItem.Author  %}
{% assign ImagePath = Content.BlogPost.Image.Paths.first %}

<div class="bg-palette4 flex justify-center">
    <div class="py-1 px-5 w-full xl:w-2/5 lg:w-3/5 md:w-4/5">
        <div class="flex items-center py-5">
            <div class="text-palette2 mr-3">
                {{ ContentItem.Author }}
            </div>
            <div class="text-gray-100 ">
               {{ ContentItem.PublishedUtc | date: "%b %d, %Y" }}
            </div>
        </div>

        <h2 class="text-gray-50 font-bold text-3xl lg:text-5xl font-serif">{{ Content.TitlePart.Title }}</h2>
        <p class="text-gray-600 text-xl lg:text-2xl font-serif pt-1">{{ Content.BlogPost.Subtitle.Text }}</p>

    </div>

</div>

